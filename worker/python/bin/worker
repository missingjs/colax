#!/bin/bash

usage()
{
    cat << EOF
usage: colax worker python [<operation>] [args]...

Operations:

    start     Start worker.

    stop      Stop worker.

    status    Show status.
EOF
    exit 1
}

operation=$1

case $operation in
    start)
        ;;
    stop)
        ;;
    status)
        ;;
    *)
        usage
        ;;
esac

